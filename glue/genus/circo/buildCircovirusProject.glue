project cress

  # Import core project sources (reference sequence only)
  run file glue/genus/circo/cressImportSources.glue

  # Import data
  run file glue/genus/circo/cressImportData.glue

  # Define genome features
  run file glue/genus/circo/cressFeatures.glue

  # Apply reverse complement & rotations to reference seqs
  run file glue/genus/circo/cressRefseqsApplyReverseComplement.glue

  #run script glue/genus/circo/cressRefseqsApplyRotations.js

  # Create reference sequences
  run file glue/genus/circo/cressReferences.glue

  # Add feature locations from tabular to reference sequences
  module featureLocationTextToGlue
    transform tabular/genus/circo/reference_feature_locations.tsv -r
    exit
    
  #run file glue/genus/circo/cressFeatureLocations.glue

  # Add variations
  run file glue/genus/circo/cressVariations.glue
  
  # Import alignments and alignment tree
  run file glue/genus/circo/cressAlignments.glue

  # Define constrained alignment tree
  run file glue/genus/circo/cressAlignmentTree.glue

  # Record feature coverage in alignments
  run file glue/genus/circo/cressRecordFeaturePresence.glue

  # Create phylogenies
  run file glue/genus/circo/cressCreateRootPhylogenies.glue

  # Validate
  validate

  exit
