
  # Import core project sources (reference sequence only)
  run file glue/genus/circo/circoImportSources.glue

  # Import data
  run file glue/genus/circo/circoImportData.glue

  # Define genome features
  run file glue/genus/circo/circoFeatures.glue

  # Apply reverse complement & rotations to reference seqs
  run file glue/genus/circo/circoRefseqsApplyReverseComplement.glue

  # Create reference sequences
  run file glue/genus/circo/circoReferences.glue

  # Add feature locations from tabular to reference sequences
  module featureLocationTextToGlue
    transform tabular/genus/circo_reference_feature_locations.tsv -r
    exit   

  # Add variations
  run file glue/genus/circo/circoVariations.glue
  
  # Import alignments and alignment tree
  run file glue/genus/circo/circoAlignments.glue

  # Define constrained alignment tree
  run file glue/genus/circo/circoAlignmentTree.glue

  # Record feature coverage in alignments
  run file glue/genus/circo/circoRecordFeaturePresence.glue

  # Create phylogenies
  run file glue/genus/circo/circoCreateGenusLevelPhylogenies.glue

  # Validate
  validate
